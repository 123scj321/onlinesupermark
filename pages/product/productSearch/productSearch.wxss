/* pages/product/productSearch/productSearch.wxss */
page{
  background-color: #f0f0f0;
}
.search{
  width:100%;
  height:100rpx;
  position: absolute;
  top:20rpx;
}
.searchContainer{
  width:90%;
  margin:0 auto;
  height:80rpx;
  background: rgba(255,255, 255, 0.3);
  border-radius: 10rpx;
  line-height: 80rpx;
  display: flex;
  flex-flow: row;
  background-color: #fff;
}
.iconfont{
  font-size:24px;
  color: #ccc;
  margin-left:50rpx;
}
.searchText{
  margin-top:15rpx;
  font-size:32rpx;
  color:#333;
  width:400rpx;
  margin-left:20rpx;
}
/*折扣商品样式  */
.disCountContainer{
  margin-top:15rpx; 
  background-color:#fff; 
  width:100%;
}
.disCountImage{
  width:100%;
  height:300rpx;
}
.disCountImage image{
  width:100%;
  height:100%;
}
.disCountinTroduce{
  width:94%;
  height:200rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  margin: 20rpx auto;
  border-bottom: 10rpx solid #f0f0f0;
}
.disCountinTroduceImage{
  width:177rpx;
  height:177rpx;
}
.disCountinTroduceImage image{
  width:100%;
  height:100%;
  display: block;
}
.disCountinTroduceDetail{
  margin-top:20rpx;
  margin-left: 30rpx;
  width:500rpx;
}
.disCountinTroduceDetailText{
  font-size:34rpx;
  color:#333;
  width:100%;
  height:90rpx;
}
.disCountinOtherContainer{
  margin-top:20rpx;
  width:100%;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}
.disCountinOtherContainer .price{
  font-size:32rpx;
  width:120rpx;
  color:red;
}
.disCountinOtherContainer .count{
  font-size:32rpx;
  color:#666;
}